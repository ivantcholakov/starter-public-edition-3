/*******************************
        Theme Selection
*******************************/

/* To override a theme for an individual element
   specify theme name below
*/

/* Global */
@site       : 'flat';
@reset      : 'flat';

/* Elements */
@button     : 'flat';
@container  : 'flat';
@divider    : 'flat';
@flag       : 'flat';
@header     : 'flat';
@icon       : 'default';
@image      : 'flat';
@input      : 'flat';
@label      : 'flat';
@list       : 'flat';
@loader     : 'flat';
@rail       : 'flat';
@reveal     : 'flat';
@segment    : 'flat';
@step       : 'flat';

/* Collections */
@breadcrumb : 'flat';
@form       : 'flat';
@grid       : 'flat';
@menu       : 'flat';
@message    : 'flat';
@table      : 'flat';

/* Modules */
@accordion  : 'flat';
@checkbox   : 'flat';
@dimmer     : 'flat';
@dropdown   : 'flat';
@embed      : 'flat';
@modal      : 'flat';
@nag        : 'flat';
@popup      : 'flat';
@progress   : 'flat';
@rating     : 'flat';
@search     : 'flat';
@shape      : 'flat';
@sidebar    : 'flat';
@sticky     : 'flat';
@tab        : 'flat';
@transition : 'default';

/* Views */
@ad         : 'flat';
@card       : 'flat';
@comment    : 'flat';
@feed       : 'flat';
@item       : 'flat';
@statistic  : 'flat';

/* Custom */
@mixins     : 'flat';
@utilities  : 'flat';

/*******************************
            Folders
*******************************/

/* Path to theme packages */
@themesFolder : 'themes';

/* Path to site override folder */
@siteFolder   : 'site/';


/* End Config */