/*******************************
        Theme Selection
*******************************/

/* To override a theme for an individual element
   specify theme name below
*/

/* Global */
@site       : 'basic';
@reset      : 'basic';

/* Elements */
@button     : 'basic';
@container  : 'basic';
@divider    : 'basic';
@flag       : 'basic';
@header     : 'basic';
@icon       : 'default';
@image      : 'basic';
@input      : 'basic';
@label      : 'basic';
@list       : 'basic';
@loader     : 'basic';
@rail       : 'basic';
@reveal     : 'basic';
@segment    : 'basic';
@step       : 'basic';

/* Collections */
@breadcrumb : 'basic';
@form       : 'basic';
@grid       : 'basic';
@menu       : 'basic';
@message    : 'basic';
@table      : 'basic';

/* Modules */
@accordion  : 'basic';
@checkbox   : 'basic';
@dimmer     : 'basic';
@dropdown   : 'basic';
@embed      : 'basic';
@modal      : 'basic';
@nag        : 'basic';
@popup      : 'basic';
@progress   : 'basic';
@rating     : 'basic';
@search     : 'basic';
@shape      : 'basic';
@sidebar    : 'basic';
@sticky     : 'basic';
@tab        : 'basic';
@transition : 'default';

/* Views */
@ad         : 'basic';
@card       : 'basic';
@comment    : 'basic';
@feed       : 'basic';
@item       : 'basic';
@statistic  : 'basic';

/* Custom */
@mixins     : 'basic';
@utilities  : 'basic';

/*******************************
            Folders
*******************************/

/* Path to theme packages */
@themesFolder : 'themes';

/* Path to site override folder */
@siteFolder   : 'site/';


/* End Config */