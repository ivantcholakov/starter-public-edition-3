/*******************************
        Theme Selection
*******************************/

/* To override a theme for an individual element
   specify theme name below
*/

/* Global */
@site       : 'material';
@reset      : 'material';

/* Elements */
@button     : 'material';
@container  : 'material';
@divider    : 'material';
@flag       : 'material';
@header     : 'material';
@icon       : 'default';
@image      : 'material';
@input      : 'material';
@label      : 'material';
@list       : 'material';
@loader     : 'material';
@rail       : 'material';
@reveal     : 'material';
@segment    : 'material';
@step       : 'material';

/* Collections */
@breadcrumb : 'material';
@form       : 'material';
@grid       : 'material';
@menu       : 'material';
@message    : 'material';
@table      : 'material';

/* Modules */
@accordion  : 'material';
@checkbox   : 'material';
@dimmer     : 'material';
@dropdown   : 'material';
@embed      : 'material';
@modal      : 'material';
@nag        : 'material';
@popup      : 'material';
@progress   : 'material';
@rating     : 'material';
@search     : 'material';
@shape      : 'material';
@sidebar    : 'material';
@sticky     : 'material';
@tab        : 'material';
@transition : 'default';

/* Views */
@ad         : 'material';
@card       : 'material';
@comment    : 'material';
@feed       : 'material';
@item       : 'material';
@statistic  : 'material';

/* Custom */
@mixins     : 'material';
@utilities  : 'material';

/*******************************
            Folders
*******************************/

/* Path to theme packages */
@themesFolder : 'themes';

/* Path to site override folder */
@siteFolder   : 'site/';


/* End Config */